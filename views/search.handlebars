{{#if movies}} {{#grouped_each 4 movies}}
<div class="card-deck">
	{{#each this}}
	<div class="card" onclick="window.location.href='/details/{{this.id}}';">
		{{#if poster_path}}
		<img class="card-img-top" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="Card image cap">
		{{else}}
		<img class="card-img-top" src="/assets/images/noimg.jpeg" alt="Card image cap" onclick="window.location.href='/details/{{this.id}}';">
		{{/if}}
		<div class="card-block text-center">
			<p class="card-title">{{this.title}}</p>
		</div>
	</div>
	{{/each}}
</div>
<br>
<br> {{/grouped_each}} {{else}}
	<div class="row justify-content-center">
	<div class="sorry-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
		<h1 class="display-4">I'm sorry :(</h1>
		<p class="lead">Your search didn't find and movies.  Please try again.</p>
		</div>
	</div>
<div class="row justify-content-center">
	<div class="col-6 custom-input-form">
		<form action="/search/" method="get">
			<div class="form-group">
				<label for="movie-search-form">Movie Title</label>
				<input type="text" class="form-control" id="movie-search-form" name="id" placeholder="Harold and Maude">
			</div>
			<div class="form-group text-right">
				<input type="submit" value="Search"/>
			</div>
		</form>
	</div>
</div>
{{/if}}
<br>
<br>

<script src="/js/app.js"></script>
