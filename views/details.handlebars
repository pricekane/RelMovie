<div class="row justify-content-center">
	<div class="col-3 details-image text-center">
		<img src="https://image.tmdb.org/t/p/w500{{movie.poster_path}}" class="details-pic" width="100%">
		<div class="row">
			{{#if user}}
			<div class="col-12 text-center">
				<button type="button" class="btn save-movie" data-id="{{movieString}}" data-user="{{user.id}}">Save to my movies</button>
			</div>
			{{/if}}
		</div>
	</div>
	<div class="col-7 details-text">
		<ul class="list-group list-group-flush">
			<li class="list-group-item"><h3>{{movie.title}}</h3></li>
			<li class="list-group-item">{{movie.overview}}</li>
			<li class="list-group-item"> Genres:
				{{#each movie.genres}}
					{{#if @last}}
						{{this.name}}
					{{else}}
						{{this.name}},
					{{/if}}
				{{/each}}
			</li>
			<li class="list-group-item">Reviews: {{movie.vote_average}}/10</li>
			<li class="list-group-item">Runtime: {{movie.runtime}}</li>
			<li class="list-group-item">Release Date: {{movie.release_date}}</li>
			<li class="list-group-item"><a href="http://www.imdb.com/title/{{movie.imdb_id}}">View on IMDB</a></li>
		</ul>
	</div>
</div>

	<script src="/js/app.js"></script>
	<script src="http://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
